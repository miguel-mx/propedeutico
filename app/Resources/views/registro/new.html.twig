{% extends 'base.html.twig' %}
{% block nav %}
{% endblock %}

{% block body %}
    <div class="jumbotron" xmlns="http://www.w3.org/1999/html">
        <h2>Taller Propedéutico de Ingreso al <br />
            Posgrado Conjunto en Ciencias Matemáticas<br />
            2016</h2>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h2 class="text-muted">Registro y solicitud de beca</h2>
        </div>
    </div>
    <h1></h1>

    {{ form_start(form) }}
    <div class="alert-danger">{{ form_errors(form) }}</div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.nombre) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.apellidos) }}
                {{ form_widget(form.apellidos, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.apellidos) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.correo) }}
                {{ form_widget(form.correo, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.correo) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <hr>
            <div class="form-group">
                {{ form_label(form.ciudad) }}
                {{ form_widget(form.ciudad, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.ciudad) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.estado) }}
                {{ form_widget(form.estado, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.estado) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Institución de origen</label>
                {{ form_widget(form.institucion, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.institucion) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <hr>
            <div class="form-group">
                <label>Seleccione una de las dos opciones para el Curso 3</label> <button class="btn btn-link"  data-toggle="modal" data-target="#progModal" >Ver programa completo...</button>
                {{ form_widget(form.curso, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.curso) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Describa porqué desea participar en el propedéutico:</label>
                {{ form_widget(form.intencion, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
                <span class="text-danger">{{ form_errors(form.intencion) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Beca</label>
                {{ form_widget(form.beca, {'attr': {'class': 'form-control'}}) }}
                <span class="text-danger">{{ form_errors(form.beca) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="alert alert-info" role="alert">
                La beca consiste en: <strong>hospedaje, alimentación y traslados hotel-CCM-hotel.</strong><br>
                <span class="text-danger">Se proporcionará hospedaje a los asistentes que no radiquen en Morelia.</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {#{{ form_label(form.kardexFile) }}#}
                {{ form_widget(form.kardexFile, {'attr': {'class': 'form-control'}}) }}
                <p class="help-block">Subir archivo Kardex en formato PDF.</p>
                <span class="text-danger">{{ form_errors(form.kardexFile) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="alert alert-info">'Kardex' académico de licenciatura y/o posgrado con descripción de cursos asistidos hasta el momento.</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_widget(form.recomendacionFile, {'attr': {'class': 'form-control'}}) }}
                <p class="help-block">Subir archivo de Recomendación en formato PDF.</p>
                <span class="text-danger">{{ form_errors(form.recomendacionFile) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="alert alert-info">Carta de recomendación por parte de un tutor, asesor o coordinador de carrera.</div>
        </div>
    </div>

    {{ form_widget(form) }}

    <h1></h1>
    <input class="btn btn-primary" type="submit" value="Enviar solicitud" />

    {{ form_end(form) }}
    <h1></h1>
    <h1></h1>

